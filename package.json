{
    "name": "noire-server",
    "version": "0.6.0",
    "description": "Noire Server",
    "main": "lib/index.js",
    "keywords": [
        "hapi",
        "boilerplate"
    ],
    "scripts": {
        "start": "NODE_PATH=$NODE_PATH:lib:. node lib/index.js",
        "watch": "NODE_PATH=$NODE_PATH:lib:. DEBUG=true nodemon --watch lib lib/index.js",
        "test": "NODE_PATH=$NODE_PATH:lib:. lab --environment testing",
        "test:grep": "NODE_PATH=$NODE_PATH:lib:. lab --environment testing --grep",
        "codecov": "mkdir .coverage 2>/dev/null; NODE_PATH=$NODE_PATH:lib:. lab -r lcov > .coverage/lcov.info && codecov",
        "reset": "NODE_PATH=$NODE_PATH:lib:. node lib/utils/reset.js",
        "secret": "NODE_PATH=$NODE_PATH:lib:. node lib/utils/auth.js secret",
        "token": "NODE_PATH=$NODE_PATH:lib:. node lib/utils/auth.js token",
        "hash": "NODE_PATH=$NODE_PATH:lib:. node lib/utils/auth.js hash",
        "props": "NODE_PATH=$NODE_PATH:lib:. node lib/utils/props.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/academia-de-codigo/noire-server.git"
    },
    "author": "Academia de CÃ³digo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/academia-de-codigo/noire-server/issues"
    },
    "homepage": "https://github.com/academia-de-codigo/noire-server",
    "dependencies": {
        "bcrypt": "^3.0.6",
        "boom": "npm:@hapi/boom@^7.4.2",
        "chalk": "^2.4.2",
        "crumb": "npm:@hapi/crumb@^7.3.0",
        "dotenv": "^8.0.0",
        "exiting": "^4.1.0",
        "glue": "npm:@hapi/glue@^6.1.0",
        "handlebars": "^4.1.2",
        "hapi": "npm:@hapi/hapi@^18.3.1",
        "hapi-auth-jwt2": "^8.6.1",
        "hapi-pagination": "^2.1.0",
        "hapi-pino": "^6.0.1",
        "hoek": "npm:@hapi/hoek@^8.1.0",
        "html-to-text": "^5.1.1",
        "inert": "npm:@hapi/inert@^5.2.1",
        "joi": "npm:@hapi/joi@^15.1.0",
        "jsonwebtoken": "^8.5.1",
        "knex": "^0.19.1",
        "lout": "^11.2.3",
        "nodemailer": "^6.3.0",
        "objection": "^1.6.9",
        "pg": "^7.12.0",
        "pino": "^5.13.1",
        "sqlite3": "^4.0.9",
        "vision": "npm:@hapi/vision@^5.5.2"
    },
    "devDependencies": {
        "@hapi/lab": "^19.1.0",
        "code": "npm:@hapi/code@^6.0.0",
        "codecov": "^3.5.0",
        "eslint-config-prettier": "^6.0.0",
        "mock-require": "^3.0.3",
        "nodemon": "^1.19.1",
        "prettier": "^1.18.2",
        "prettier-eslint": "^9.0.0",
        "prettier-eslint-cli": "^5.0.0",
        "qs": "^6.7.0",
        "sinon": "^7.3.2"
    }
}
