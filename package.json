        "nodemon": "^1.19.1",
        "prettier": "^1.18.2",
        "prettier-eslint": "^8.8.2",
        "prettier-eslint-cli": "^4.7.1",
        "qs": "^6.7.0",
        "sinon": "^7.3.2",
        "style-loader": "^0.23.1"
    }
